{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "homepage_url": "http://localhost:8080/",
  "description": "Cette fois, tu ne manqueras pas un autre évènement.",
  "default_locale": "en",
  "permissions": [
    "<all_urls>",
    "*://*/*",
    "storage", 
    "notifications",
    "alarms"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extName__",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png"
    }
  }
}
